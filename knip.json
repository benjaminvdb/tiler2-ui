{
  "$schema": "https://unpkg.com/knip@5/schema.json",

  "entry": [
    "src/main.tsx",
    "src/App.tsx",
    "src/env.ts"
  ],

  "project": ["src/**/*.{ts,tsx}"],

  "paths": {
    "@/*": ["./src/*"],
    "@/features/*": ["./src/features/*"],
    "@/shared/*": ["./src/shared/*"],
    "@/core/*": ["./src/core/*"],
    "@/infrastructure/*": ["./src/infrastructure/*"]
  },

  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },

  "ignoreDependencies": [
    "@types/uuid"
  ],

  "ignore": [
    "src/vite-env.d.ts"
  ]
}
