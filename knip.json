{
  "$schema": "https://unpkg.com/knip@5/schema.json",

  "entry": [
    "src/main.tsx",
    "src/App.tsx",
    "src/env.ts",
    "src/shared/components/ui/**/*.tsx",
    "api/copilotkit.ts"
  ],

  "project": ["src/**/*.{ts,tsx}", "server/**/*.ts", "api/**/*.ts"],

  "paths": {
    "@/*": ["./src/*"],
    "@/features/*": ["./src/features/*"],
    "@/shared/*": ["./src/shared/*"],
    "@/core/*": ["./src/core/*"],
    "@/infrastructure/*": ["./src/infrastructure/*"]
  },

  "ignoreExportsUsedInFile": true,

  "ignoreDependencies": [
    "tailwindcss",
    "tailwindcss-animate",
    "tailwind-scrollbar"
  ],

  "ignore": ["src/vite-env.d.ts"],

  "ignoreBinaries": ["vite-bundle-visualizer"],

  "ignoreIssues": {
    "src/shared/components/ui/**": ["exports"],
    "src/core/services/observability/**": ["exports"],
    "src/shared/components/error-boundary/**": ["exports"],
    "src/features/goals/types/**": ["types"]
  }
}
